<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tienda de Bajos</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>

  <body>
    <header>
      <h1>Tienda de Bajos</h1>

      <nav>
        {{#if user}}
          <a href="/home">Inicio</a>
          <a href="/products">Productos</a>
          <a href="/realtimeproducts">Tiempo real</a>
          <a href="/current">Mi perfil</a>
          <a href="#" id="goCart">Mi carrito</a>
          <a href="/logout">Logout</a>
        {{else}}
          <a href="/login">Login</a>
        {{/if}}
      </nav>
    </header>

    <main>
      {{{body}}}
    </main>

    <footer>
      <p>© {{year}} Tienda de Bajos - Proyecto Backend</p>
    </footer>

    <script>
      
      const cartBtn = document.getElementById("goCart");
      if (cartBtn) {
        cartBtn.addEventListener("click", (e) => {
          e.preventDefault();
          const cartId = localStorage.getItem("cartId");
          if (!cartId) {
            alert("⚠️ Todavía no tenés un carrito.");
            return;
          }
          
          window.location.href = `/cart?cartId=${cartId}`;
        });
      }
    </script>
  </body>
</html>









